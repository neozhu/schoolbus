@using CleanArchitecture.Blazor.Application.Features.TripReports.DTOs
<div class="d-flex flex-row justify-space-between align-center gap-1">
    <div class="d-flex flex-column justify-space-between my-2  gap-1">
        <MudText Typo="Typo.h6">General information #@(Data.Id)</MudText>
        <div class="d-flex flex-row align-center   gap-1">
            <MudIcon Icon="@Icons.Material.Filled.DirectionsBus" Title="bus no." />
            <MudText Typo="Typo.body2">School bus: @Data.PlatNumber</MudText>
        </div>
        <div class="d-flex flex-row align-center   gap-1">
            <MudIcon Icon="@Icons.Material.Filled.AccountCircle" Title="driver" />
            <MudText Typo="Typo.body2">Driver: @(Data.Driver?.DisplayName?? Data.Driver?.UserName)</MudText>
        </div>
    </div>
    <div class="d-flex flex-column">
        <ServerTime></ServerTime>
    </div>
</div>
<div class="d-flex flex-column">
    <MudText Typo="Typo.h6">Route information</MudText>
    <div class="d-flex flex-row justify-space-between align-center   gap-2">
        <MudTextField Value="@Data.Itinerary?.StartingStation" Label="start location" Variant="Variant.Outlined" ReadOnly></MudTextField>
        <MudIcon Size="Size.Large" Icon="@Icons.Material.Filled.Route" Title="route" />
        <MudTextField Value="@Data.Itinerary?.TerminalStation" Label="final location" Variant="Variant.Outlined" ReadOnly></MudTextField>
    </div>
</div>
@code {
    [Parameter] public TripReportDto Data { get; set; } = new();
}
